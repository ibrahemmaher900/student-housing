# .env file - IMPORTANT: Keep this file secure and never commit to version control!
# Generate a new secret key for production
DJANGO_SECRET_KEY=change_this_to_a_secure_random_key_in_production
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database settings (if using PostgreSQL in production)
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=student_housing_db
# DB_USER=db_user
# DB_PASSWORD=secure_password_here
# DB_HOST=localhost
# DB_PORT=5432

# Email settings
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@example.com
EMAIL_HOST_PASSWORD=your_email_password

# Social auth settings
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_SECRET=your_google_secret
FACEBOOK_CLIENT_ID=your_facebook_client_id
FACEBOOK_SECRET=your_facebook_secret